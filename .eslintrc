{
    "parser": "babel-eslint",
    "extends": [
        "plugin:react/recommended",
        "airbnb-base"
    ],
    "env": {
        "es6": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "impliedStrict": true,
            "experimentalObjectRestSpread": true
        }
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "arrow-parens": [2,"as-needed"],
        "camelcase": [2,{"properties":"always"}],
        "comma-dangle": [2,"never"],
        "complexity": [1,5],
        "curly": [2,"all"],
        "eol-last": 0,
        "func-style": [1, "expression"],
        "import/extensions": [1, "never" ],
        "import/prefer-default-export": 2,
        "indent": [1, 4, { "SwitchCase": 1 }],
        "jsx-quotes": [1, "prefer-single"],
        "linebreak-style": 0,
        "lines-around-comment": [1,{"beforeBlockComment":true,"afterBlockComment":false,"beforeLineComment":true,"afterLineComment":false,"allowBlockStart":true,"allowBlockEnd":true}],
        "max-depth": [1,4],
        "max-len":  [1, 140, 2, { "ignoreUrls": true, "ignoreComments": false, "ignoreRegExpLiterals": true, "ignoreStrings": true, "ignoreTemplateLiterals": true }],
        "max-nested-callbacks": [1,10],
        "max-params": [1,5],
        "max-statements": [1,10],
        "no-bitwise": 1,
        "no-cond-assign": [2,"except-parens"],
        "no-confusing-arrow": 0,
        "no-constant-condition": [1, { "checkLoops": false }],
        "no-debugger": 1,
        "no-empty-character-class": 1,
        "no-extra-parens": [1,"all"],
        "no-implicit-coercion": [1,{"boolean":true,"number":true}],
        "no-irregular-whitespace": [1, { "skipRegExps": true }],
        "no-multiple-empty-lines": [1,{"max":2}],
        "no-negated-in-lhs": 1,
        "no-param-reassign": [2,{"props":true}],
        "no-undefined": 1,
        "no-unused-vars": 1,
        "no-warning-comments": [1,{"terms":["todo"],"location":"anywhere"}],
        "object-curly-spacing": [1,"never",{"arraysInObjects":true,"objectsInObjects":true}],
        "operator-linebreak": [1,"after"],
        "quotes": [1,"single","avoid-escape"],
        "react/display-name": [1,{ "ignoreTranspilerName": false }],
        "react/jsx-closing-bracket-location": 0,
        "react/jsx-indent-props": [1, 4],
        "react/jsx-key": 1,
        "react/jsx-no-literals": 1,
        "react/no-direct-mutation-state": 1,
        "react/no-multi-comp": 1,
        "space-unary-ops": [
            2,
            {
                "words":true,
                "nonwords":true,
                "overrides": {
                    "!": false,
                    "++": false,
                    "--": false
                }
            }
        ],
        "no-plusplus": 0
    },
    "settings": {
        "import/resolver": {
            "webpack": {}
        }
    }
}